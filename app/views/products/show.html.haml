.col-lg-12
  %h2= @product.name

  %dl{ class: "dl-horizontal"}
    %dt= "Unit:"
    %dd= @product.unit.name

    %dt= "Suppliers"
    - @product.suppliers.each do |supplier| 
      %dd= supplier.email

    %dt="Image" if @product.image.url
    %dd= image_tag @product.image.url(:thumb), alt: @product.name if @product.image.url